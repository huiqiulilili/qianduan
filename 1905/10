<body>
    <p onclick="changeC()">点击时间</p>
    <script>
        setInterval(changeC,1000)
    function changeC(){
        var color= ['red','blue','yellow','rgb(0,0,225)'];
        var i = parseInt( Math.random()*3);
        document.body.style.background = color[i];
    }
    
    </script>
</body>
</html>
